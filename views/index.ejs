<%- include('./partials/header') %>


<div class ="ui main text container">
    <div class="ui huge header">Blog App</div>
    <!-- <h1><%= currentUser %></h1> -->
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image%>" >
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%=blog._id%>">
                            <%= blog.title%> -- <div style="font-style: italic !important; font-size: medium !important;">by <%= blog.author.username%></div>
                        </a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0,100) %>.....</p>
                        </div>
                    </div>
                    <!-- toDateString() changes bad looking date in displayable date -->
                    
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>" >
                            Read More
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                    
                    
                </div>
            <% }); %>
        </div>
    </div>
</div>


<%- include('./partials/footer') %>